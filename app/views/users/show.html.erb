<h1 class="text-center"> Your Profile </h1>
 </br>
<ul class= "list-group">
    <li class="list-group-item"> Name: <%= @user.name %> </li>
    <li class="list-group-item"> Email: <%= @user.email %> </li>
</ul>
    </br>
<div class = "btn-group mx-auto text-center">
    <%= button_to 'Edit Profile', edit_user_path(@user), method: :get, class: 'btn btn-primary'%> 
    <%= button_to 'Delete Profile', user_path(@user), method: :delete, :onclick => "return confirm('Deleting your profile will also delete all of its sessions. Are you sure?')", class: "btn btn-danger"%>
</div>