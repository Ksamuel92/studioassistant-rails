
<div class= "page-header">
<h1 class= "text-center"> <%= index_header_sessions %> </h1>
<p class= "text-center text-muted font-weight-light"> view and edit your sessions </p> 
</div>
<hr>
 <br>
 <div class="row text-center">
<% @recordingsessions.each do |session| %>

  <div class="card mx-auto" style="width: 18rem;">
    <div class="card-body">
    <h5 class="card-title"><%= link_to "Session at #{session.studio.name} with #{session.client.name} on #{session.start_date}", studio_recording_session_path(session.studio, session) %></h5>
    <p class="card-text">Session is located at <%= studio_address_helper(session.studio) %> </p>
    <div class = "btn-group">
      <%= button_to 'Edit Session', edit_studio_recording_session_path(session.studio, session), method: :get, class: 'btn btn-primary'%> <%= button_to 'Delete Session', recording_session_path(session), method: :delete, :onclick => "return confirm('Are you sure you want to delete this session?')", class: "btn btn-danger"%>
    </div>
    </div>
  </div>
<% end %>
</div>
